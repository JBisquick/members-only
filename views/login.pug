extends layout

block content
  if currentUser 
    h1 Welcome back #{currentUser.full_name}
    div
      a(href='/log-out') Log Out
  else 
    h1= title
    form(action="/log-in" method='POST')
      div
        label(for='username') Username: 
        input#username(type="text" placeholder="SillyNut69" name="username" required)
      div
        label(for='password') Password: 
        input#password(type="password" name="password" required)
      button.btn(type='submit') Log In
    
  if errors 
    ul 
      for error in errors 
        li!= error.msg