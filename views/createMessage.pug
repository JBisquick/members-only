extends layout

block content 
  h1= title
  if currentUser
    form(method='POST')
      div
        label(for='message') Message:
        textarea#message(type="text" name="message" rows="12" cols="100" required) 
      button.btn(type='submit') Create Message
    
  else 
    p You are not logged in. You do not have permission to create messages.

  if errors 
      ul 
      for error in errors 
          li!= error.msg
